pipeline {
    agent any
    stages {
        stage('Test docker') {
            agent {
                docker {
                    image 'williamyeh/ansible:ubuntu16.04'
                }

            }
            steps {
                echo 'Show Some Message'
            }
        }
        stage('Build All') {
            agent {
                docker {
                    image 'weiweiwitch/jdk8-nodejs:0.1.0'
                }
            }
            steps {
                withCredentials(bindings: [sshUserPrivateKey(credentialsId: 'testvm-20', keyFileVariable: 'keyfile')]) {
                    sh 'sh -x ci/build_frontend.sh'
                    sh 'sh -x ci/build_backend.sh '
                }
            }
        }
        stage('Prepare Latest Release') {
            agent {
                docker {
                    image 'williamyeh/ansible:ubuntu16.04'
                }

            }
            steps {
                withCredentials(bindings: [sshUserPrivateKey(credentialsId: 'testvm-20', keyFileVariable: 'keyfile')]) {
                    sh 'sh -x ci/prepareLatestRelease.sh'
                }
            }
        }
    }
}